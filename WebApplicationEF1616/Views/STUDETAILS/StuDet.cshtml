@using WebApplicationEF1616.Models;
@model STUDENTDETAILS
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ADD STUDENT</title<section class=" text-center text-lg-start">
        <style>
            .rounded-t-5 {
                border-top-left-radius: 0.5rem;
                border-top-right-radius: 0.5rem;
            }


            .rounded-bl-lg-5 {
                border-bottom-left-radius: 0.5rem;
            }

            }
        </style>
      
        <meta charset="utf-8" />
        <link href="Content/bootstrap.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://www.markuptag.com/bootstrap/5/css/bootstrap.min.css">
        <title></title>
</head>
<body>
     <section class="vh-100 bg-image"
             style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-5">
                                <h2 class="text-uppercase text-center mb-5"></h2>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <h4 class="mb-5 text-secondary">INSERTING DETAILS</h4>
                                    <div class="row">
                                        <div class="mb-3 col-md-8">
                                             
                                            <label>SNAME<span class="text-danger">*</span></label>
                                            @Html.TextBoxFor(model => model.SNAME, new { @class = "form-control", placeholder="Enter SNAME" })
                                            @Html.ValidationMessageFor(model => model.SNAME, "", new { @class = "text-danger" })
                                        </div>
                                        
                                        
                                        <div class="mb-3 col-md-8">
                                            <label>ROLLNO<span class="text-danger">*</span></label>
                                            @Html.TextBoxFor(model => model.ROLLNO, new { @class = "form-control", placeholder="Enter ROLLNO" })
                                            @Html.ValidationMessageFor(model => model.ROLLNO, "", new { @class = "text-danger" })
                                        </div>
                                         <div class="mb-3 col-md-8">
                                            <label>DEPNAME<span class="text-danger">*</span></label>
                                            @Html.TextBoxFor(model => model.DEPNAME, new { @class = "form-control", placeholder="Enter DEPNAME" })
                                            @Html.ValidationMessageFor(model => model.DEPNAME, "", new { @class = "text-danger" })
                                        </div>
                                          <div class="mb-3 col-md-8">
                                            <label>DEPNO<span class="text-danger">*</span></label>
                                            @Html.TextBoxFor(model => model.DEPNO, new { @class = "form-control", placeholder="Enter DEPNO" })
                                            @Html.ValidationMessageFor(model => model.DEPNO, "", new { @class = "text-danger" })
                                        </div>
                                          <div class="mb-3 col-md-8">
                                            <label>STUFEE<span class="text-danger">*</span></label>
                                            @Html.TextBoxFor(model => model.STUFEE, new { @class = "form-control", placeholder="Enter STUFEE" })
                                            @Html.ValidationMessageFor(model => model.STUFEE, "", new { @class = "text-danger" })
                                        </div>
                                        
                                      
                                        <input type="submit" class="btn btn-primary float-end" value="Submit">
                                    </div>

                                }

</body>
</html>
